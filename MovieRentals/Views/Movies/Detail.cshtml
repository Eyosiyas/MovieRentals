@using MovieRentals.Models;
@model Movie
@{
    ViewBag.Title = "Movie Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (Model != null)
    {
        <h2>@Model.Name</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Genre.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genre.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateAdded)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateAdded)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NumberInStock)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumberInStock)
            </dd>

        </dl>
    }
    else
    {
        <h2>There is no movie with specified detail.</h2>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index","Movies")
</p>
