@using MovieRentals.Models;
@model Customer

@{
    ViewBag.Title = "Customer Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <h2>@Model.Name</h2>
    <ul>
        @if (Model.BirthDate != null)
        {
            <li>Birth Date: @Model.BirthDate</li>
        }        
        <li>Membership Type: @Model.MembershipType.Name</li>
    </ul>
}
else
{
    <h2>No customer with such detail exists.</h2>
}

